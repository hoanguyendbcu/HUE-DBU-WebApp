@section Scripts {
    <script>
        var geojson;

        $(document).ready(function () {
            $('#cboWeek').change(function () {
                loadData();
            });

            loadDataMap();

           // table.ajax.reload();
            $('#example1').DataTable({
                "paging": false,
                "bInfo": false,
                "info": false,
                "ordering": false,
                initComplete: function () {
                    this.api().columns([1, 2, 3, 4, 5]).every(function () {
                        var column = this;
                        var select = $('<select><option value=""></option></select>')
                            .appendTo($(column.header()))
                            .on('change', function () {
                                var val = $.fn.dataTable.util.escapeRegex(
                                    $(this).val()
                                );

                                column
                                    .search(val ? '^' + val + '$' : '', true, false)
                                    .draw();
                            });
                        column.data().unique().sort().each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>')
                        });
                    });

                }
            });
        });


        function loadData() {
            var param = {
                'WeekID': $('#cboWeek').val()
            };

            $.ajax({
                url: 'OpeartionPlan/Index',
                type: 'get',
                dataType: 'html',
                data: param,
                success: function (data) {
                    $("#data-grid").html(data);

                    loadDataMap();

                     $('#example1').DataTable({
                        "paging": false,
                        "bInfo": false,
                        "info": false,
                        "ordering": false,
                        initComplete: function () {
                            this.api().columns([1, 2, 3, 4, 5]).every(function () {
                                var column = this;
                                var select = $('<select><option value=""></option></select>')
                                    .appendTo($(column.header()))
                                    .on('change', function () {
                                        var val = $.fn.dataTable.util.escapeRegex(
                                            $(this).val()
                                        );

                                        column
                                            .search(val ? '^' + val + '$' : '', true, false)
                                            .draw();
                                    });
                                column.data().unique().sort().each(function (d, j) {
                                    select.append('<option value="' + d + '">' + d + '</option>')
                                });
                            });

                        }
                    });
                   // table.ajax.reload();
                }
            });
        }

        
    </script>

    <script>
