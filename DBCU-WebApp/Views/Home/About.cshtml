@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer
@{
    ViewData["Title"] = "Hue DBU - " + ViewLocalizer["Introduction"].Value;
    string lang = System.Globalization.CultureInfo.CurrentCulture.ToString();
}


<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs" style="background-image: url('../images/bg/banner-ngomon.png');height:45vh;background-size: 100% 100%;"> 
    <div class="container position-relative d-flex flex-column align-items-center" data-aos="fade">
        <h2>@ViewLocalizer["Introduction"]</h2>
        <ol>
            <li><a asp-area="" asp-controller="Home" asp-action="Index">@ViewLocalizer["Home"]</a></li>
            <li>@ViewLocalizer["Introduction"]</li>
        </ol>
    </div>
</section><!-- End Breadcrumbs -->

    <!-- ======= About Us Section ======= -->
    <section id="about-ustop" class="about-ustop">
      <div class="container" data-aos="fade-up">

        <div class="row content">
          <div class="col-lg-6" data-aos="fade-right">
     
              <h2>@ViewLocalizer["Intro"]</h2>
              @*<h3>Eum ipsam laborum deleniti velitena</h3>*@
          </div>
          <div class="col-lg-6 pt-4 pt-lg-0" data-aos="fade-left">
             <p>@ViewLocalizer["lblIntro"]</p>
                    <p>@ViewLocalizer["lblIntro1"]</p> 
          </div>
        </div>

      </div>
    </section><!-- End About Us Section -->
