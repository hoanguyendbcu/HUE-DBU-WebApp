@using DBCU_WebApp
@model DBCU_WebApp.Models.News
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer ViewLocalizer

@{ 
    ViewData["Title"] = Model.Title;
    //List<Category> categories = ViewBag.categories;
