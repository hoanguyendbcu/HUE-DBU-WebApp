<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <ol>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">@ViewLocalizer["Home"]</a></li>
                <li>@ViewLocalizer["News"]</li>
            </ol>

        </div>
    </section><!-- End Breadcrumbs -->
 
    <!-- ======= Blog Single Section ======= -->
    <section id="blog" class="blog">
        <div class="container" data-aos="fade-up">

            <div class="row">

                <div class="col-lg-8 entries">

                    <article class="entry entry-single">

                        <h2 class="entry-title">
                            @if (lang == "vi")
                            {
                            @Model.Title
                            }
                            else if (lang == "en")
                            {
                            @Model.TitleEn
                            }

                        </h2>

                        <div class="entry-meta">
                            <ul>
                                <li class="d-flex align-items-center"><i class="icofont-user"></i> @Model.Author</li>
                                <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i>  <time datetime="2020-01-01">@Model.DateUpdated.ToShortDateString()</time></li>

                            </ul>
                        </div>
                        <div>

                            @if (lang == "vi")
                            {
                            @Model.Description }
                            else if (lang == "en")
                            {
                            @Model.DescriptionEn
                            }

                        </div>

                        <div class="">
                            <img src="@Url.Content("~/images/News/" + @Model.StrUrlImage)" alt="" class="img-fluid">
                        </div>

                        <div class="entry-content">

                            @if (lang == "vi")
                            {
                            @Html.Raw(Model.Content)
                            }
                            else if (lang == "en")
                            {
                            @Html.Raw(Model.ContentEn)
                            }
                        </div>

                    </article><!-- End blog entry -->

                </div><!-- End blog entries list -->

                <div class="sidebar">

                    <h3 class="sidebar-title">@ViewLocalizer["Search"]</h3>
                    <div class="sidebar-item search-form">
                        <form action="">
                            <input type="text">
                            <button type="submit"><i class="icofont-search"></i></button>
                        </form>
                    </div><!-- End sidebar search formn-->

