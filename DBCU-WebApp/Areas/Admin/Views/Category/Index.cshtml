@model IEnumerable<DBCU_WebApp.Models.Category>
@using DBCU_WebApp.Areas.Identity.Pages.Account.Manage

@{
    ViewData["Title"] = "List category news";
    Layout = "_Layout";
    ViewData["ActivePagePar"] = ManageNavPages.News;
    ViewData["ActivePage"] = ManageNavPages.NewsCategory;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() > 0)
        {@await Component.InvokeAsync("RowTreeCategory", new { categories = Model, level = 0 })}
    </tbody>
</table>



